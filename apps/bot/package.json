{
  "name": "akira",
  "version": "0.0.1",
  "description": "A multi-feature Discord bot",
  "author": "@NotKaskus",
  "main": "./dist/Akira.js",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=20.x"
  },
  "scripts": {
    "build": "tsup",
    "check": "tsc",
    "dev": "tsup --watch --onSuccess \"bun run start\"",
    "start": "node --preserve-symlinks --enable-source-maps ./dist/KBot.js",
    "lint": "eslint --ext ts src tests && bun run check",
    "lint:fix": "eslint --fix --ext ts src tests",
    "format": "prettier --write --log-level=warn \"{src,tests}/**/*.{js,ts,json}\" && prisma format",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:sync": "bun run db:generate && bun run db:push",
    "db:deploy": "prisma migrate deploy",
    "db:migrate": "prisma migrate reset && prisma migrate dev"
  },
  "dependencies": {
    "@kbotdev/plugin-modules": "^3.0.0",
    "@killbasa/redis-utils": "^0.0.10",
    "@prisma/client": "^5.8.0",
    "@sapphire/decorators": "^6.1.0",
    "@sapphire/discord.js-utilities": "^7.2.1",
    "@sapphire/duration": "^1.1.2",
    "@sapphire/fetch": "^3.0.2",
    "@sapphire/framework": "^5.2.1",
    "@sapphire/plugin-api": "^6.1.1",
    "@sapphire/plugin-logger": "^4.0.2",
    "@sapphire/plugin-scheduled-tasks": "^10.0.1",
    "@sapphire/utilities": "^3.15.3",
    "@sentry/browser": "^8.2.1",
    "@sentry/integrations": "^7.114.0",
    "@sentry/node": "^8.2.1",
    "@sentry/types": "^8.2.1",
    "discord.js": "^14.15.2",
    "dotenv": "^16.4.5",
    "prom-client": "^15.1.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^9.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "prisma": "^5.14.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "imports": {
    "#config": "./dist/config.js",
    "#lib/*": "./dist/lib/*.js",
    "#modules/*": "./dist/modules/*.js",
    "#plugins/*": "./dist/plugins/*.js"
  }
}